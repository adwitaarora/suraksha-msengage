<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.6.0/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.6.0/mapbox-gl.css' rel='stylesheet' />
    <style>
        #map {
            height: 50%;
            width: 100%;
        }

        .nav {
            cursor: pointer;
        }

        .nav-alt {
            cursor: pointer;
        }

        .hidden {
            display: none;
        }
    </style>
    <title>Tip</title>
</head>

<body>
    <%- include('../partials/navbar') %>
        <section class="main_content d-flex row m-5">
            <div class="col">
                <h1 class="m-2 text-center">Tip Details</h1>
                <div class="row mb-3">
                    <p class="lead">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-person me-2" viewBox="0 0 16 16">
                            <path
                                d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                        </svg>
                        Suspect Name
                    </p>
                    <p class="h5 m-2 border p-2">

                        <%= report.Cname %>
                    </p>
                </div>
                <div class="row mb-3">
                    <p class="lead">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-info me-2" viewBox="0 0 16 16">
                            <path
                                d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                        </svg>
                        Nature of Crime
                    </p>
                    <p class="h5 m-2 border p-2">
                        <%= report.crime %>
                    </p>
                </div>
                <div class="row mb-3">
                    <p class="lead">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-calendar me-2" viewBox="0 0 16 16">
                            <path
                                d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                        </svg>
                        Date and Time of incident
                    </p>
                    <p class="h5 m-2 border p-2">

                        <%= report.datetime %>
                    </p>
                </div>
                <div class="row mb-3">
                    <p class="lead">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-card-text me-2" viewBox="0 0 16 16">
                            <path
                                d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                            <path
                                d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z" />
                        </svg>
                        Description
                    </p>
                    <p class="h5 m-2 border p-2">
                        <%= report.description %>
                    </p>
                </div>
                <div class="row mb-3">
                    <p class="lead">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-geo-alt me-2" viewBox="0 0 16 16">
                            <path
                                d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                            <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        </svg>
                        Location
                    </p>
                    <p class="h5 m-2 border p-2">
                        <%= report.address %>
                    </p>
                </div>
                <form action="/tips/close/<%= report.id %> " method="post">
                    <button type="submit" class="btn btn-primary" id="next">Resolve</button>
                </form>
            </div>
            <div class="col m-2 text-center">
                <div class="row justify-content-md-center">
                    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
                        <h1>
                            <%= report.imgDescription %>
                        </h1>
                        <!-- <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0"
                                class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                                aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                                aria-label="Slide 3"></button>
                        </div> -->
                        <div class="carousel-inner">
                            <% report.images.forEach((img, i)=> {%>
                                <div class="carousel-item <%= i===0 ? 'active':'' %> ">
                                    <img src="<%= img.url %> " alt="..." style="max-height: 270px; width: 300px;">
                                </div>
                                <% }) %>
                        </div>
                        <% if (report.images.length> 1) { %>
                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                            <% } %>
                    </div>
                </div>
                <!-- <div class="row"> -->
                <h1>Map</h1>
                <div id="map" class="align-self-center"></div>
                <!-- </div> -->
            </div>
        </section>
        <%- include('../partials/footer') %>
            <script src="/js/bootstrap.min.js"></script>
            <script>
                const mapToken = '<%- process.env.MAP_TOKEN%>';
                let report = '<%-JSON.stringify(report)%>';
            </script>
            <script src="/js/addMap.js"></script>
            <script>
                let navBrand = document.querySelector('.nav')
                let navBrandAlt = document.querySelector('.nav-alt')

                navBrand.addEventListener('click', () => {
                    navBrand.classList.toggle('hidden');
                    navBrandAlt.classList.toggle('hidden');
                })
                navBrandAlt.addEventListener('click', () => {
                    navBrand.classList.toggle('hidden');
                    navBrandAlt.classList.toggle('hidden');
                })
            </script>

</body>

</html>